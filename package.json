{
  "name": "agent-tracker",
  "version": "1.0.0",
  "description": "Real-time TUI dashboard for tracking and monitoring active Claude Code sessions",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "agent-tracker": "./dist/cli.js"
  },
  "files": [
    "dist",
    "scripts/hooks",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/cli.tsx",
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "demo:session": "./scripts/test-session.sh",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "tui",
    "ink",
    "typescript",
    "claude",
    "claude-code",
    "session-tracking",
    "monitoring",
    "dashboard"
  ],
  "author": "Agent Tracker Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/agent-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/agent-tracker/issues"
  },
  "homepage": "https://github.com/yourusername/agent-tracker#readme",
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@vitest/ui": "^3.2.4",
    "ink-testing-library": "^4.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "ink": "^6.3.1",
    "react": "^19.2.0"
  }
}
